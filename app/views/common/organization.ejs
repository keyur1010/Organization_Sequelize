<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Organization Form</title>
        <style>
          *, *:before, *:after {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

body {
  font-family: 'Nunito', sans-serif;
  color: #384047;
}

form {
  max-width: 300px;
  margin: 10px auto;
  padding: 10px 20px;
  background: #f4f7f8;
  border-radius: 8px;
}

h1 {
  margin: 0 0 30px 0;
  text-align: center;
}

input[type="text"],
input[type="password"],
input[type="date"],
input[type="datetime"],
input[type="email"],
input[type="number"],
input[type="search"],
input[type="tel"],
input[type="time"],
input[type="url"],
input[type="file"],
textarea,
select {
  background: rgba(255,255,255,0.1);
  border: none;
  font-size: 16px;
  height: auto;
  margin: 0;
  outline: 0;
  padding: 15px;
  width: 100%;
  background-color: #e8eeef;
  color: #8a97a0;
  box-shadow: 0 1px 0 rgba(0,0,0,0.03) inset;
  margin-bottom: 30px;
}

input[type="radio"],
input[type="checkbox"] {
  margin: 0 4px 8px 0;
}

select {
  padding: 6px;
  height: 32px;
  border-radius: 2px;
}

button {
  padding: 19px 39px 18px 39px;
  color: #FFF;
  background-color: #5fc0e1;
  font-size: 18px;
  text-align: center;
  font-style: normal;
  border-radius: 5px;
  width: 100%;
  border: 1px solid #5fc0e1;
  border-width: 1px 1px 3px;
  box-shadow: 0 -1px 0 rgba(255,255,255,0.1) inset;
  margin-bottom: 10px;
}

fieldset {
  margin-bottom: 30px;
  border: none;
}

legend {
  font-size: 1.4em;
  margin-bottom: 10px;
}

label {
  display: block;
  margin-bottom: 8px;
}

label.light {
  font-weight: 300;
  display: inline;
}

.number {
  background-color: #5fc0e1;
  color: #fff;
  height: 30px;
  width: 30px;
  display: inline-block;
  font-size: 0.8em;
  margin-right: 4px;
  line-height: 30px;
  text-align: center;
  text-shadow: 0 1px 0 rgba(255,255,255,0.2);
  border-radius: 100%;
}
#Sign_up{
  cursor: pointer;
}

@media screen and (min-width: 480px) {

  form {
    max-width: 480px;
  }

}

        </style>
    </head>
    <body>
      <div class="row">
    <div class="col-md-12">
      <form action="/organizationFormData" method="post" enctype="multipart/form-data">
        <h1>Organization Sign Up </h1>
        <fieldset>
          <legend>Organization Basic Info</legend>
          <label for="organizationName">Donation Amount:</label>
          <input type="number" id="organizationDonation" min=0 name="organizationDonation" required> 
          <label for="orstart">Time Start:</label>
          <input type="date" id="orStart" onchange="checkData()" name="orStart" > 
          <label for="orEnd">Time End:</label>
          <input type="date" id="orEnd" name="orEnd" onchange="checkData()" min="2024-01-02" required>
          <label for="organizationType">Organization type:</label>
          <select name="organizationType" id="organizationType" required>
            <option value="">-Select-</option>
            <option value="Medical">Medical</option>
            <option value="Study">Study</option>
            <option value="Charity">Charity</option>
          </select>
          
          <label for="whySelect">Why Need Donation:</label>
          <textarea name="whySelect" id="whySelect" cols="20" rows="5" required></textarea>

          <label for="governmentCertified">Organization type:</label>
          <select name="governmentCertified" id="governmentCertified" required>
            <option value="">-Select-</option>
            <option value="Yes">Yes</option>
            <option value="No">No</option>
          </select>
          
          <label for="organizationAddress">Address:</label>
          <textarea name="organizationAddress" id="organizationAddress" cols="20" rows="5" required></textarea>
                            

          
         <label for="organizationImage">Photo:</label>
         <input type="file" id="organizationImage" name="organizationImage" onchange="readURL(this)" required1e>
         <div class="img_url" style="border: 2px solid #e8eeef; width: 100px; height: 100px; overflow: hidden;">
            <img src="" style="height: 100%; width: 100%; object-fit: cover;" id="img_show" alt="Upload Image">
         </div> 
         </fieldset>
       
        <button type="submit" id="Sign_up">Sign Up</button>
        
      </form>
    </div>
  </div>
      
</body>

  <script>
    // minimum value in date
    function checkData(){
      const startDate=document.getElementById('orStart');
      const endDate=document.getElementById('orEnd');
      if(endDate.value<startDate.value){
        endDate.value=null
        console.log("inside")
      }
      endDate.setAttribute('min',startDate.value)
    }
    document.addEventListener("DOMContentLoaded", function() {
      const startDate=document.getElementById('orStart');
      const endDate=document.getElementById('orEnd');
      var today = new Date().toISOString().split('T')[0];
      startDate.setAttribute('min',today)
      // document.getElementById("orStart").value = today;
    });
    function readURL(input) {
      var checkImage=document.getElementById("organizationImage")
      var allowedExtensions=/(\.jpg|\.jpeg|\.png)$/i;
      var fileName=checkImage.value;
      var imgDiv=document.getElementById("img_show")
      if (input.files && input.files[0]) {
      var reader = new FileReader();
      reader.onload = function (e) {
        imgDiv.setAttribute('src', e.target.result);
      };
        reader.readAsDataURL(input.files[0]);
      }
    if (!allowedExtensions.exec(fileName)) {
      alert('Invalid file type. Please choose a JPG, JPEG, or PNG file.');
      checkImage.value = '';
      return false;
    }
    return true
  }

  </script>
</html>
