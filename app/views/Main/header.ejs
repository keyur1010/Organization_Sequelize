<style>
.flash-message {
  box-sizing: border-box;
	animation-name: flash, fade-out;
	animation-duration: 0.6s, 10s;
	animation-fill-mode: both, both;
  animation-timing-function:ease,ease-in;
  text-align: center; line-height: 20px;
  padding: 10px; font-size: 16px;
  border: 1px solid black; margin: 10px;
  background: #ccc;
}
 
@keyframes flash {
	14% { font-size: 24px; color: red; background: #ff0; }
	28% { font-size: 12px; color: initial; background: initial; }
	42% { font-size: 18px; }
	57% { font-size: 15px; }
	71% { font-size: 16.5px; }
	85% { font-size: 15.75px; }
}

@keyframes fade-out { 100% { opacity: 0; } }
</style>
<body>
  <div>
    <% if (messages.success) { %>
        <div class="success flash-message">
            <%= messages.success %>
        </div>
    <% } %>

    <% if (messages.error) { %>
        <div class="error flash-message">
            <%= messages.error %>
        </div>
    <% } %>

    <% if (messages.info) { %>
        <div class="info flash-message">
            <%= messages.info %>
        </div>
    <% } %>

    <% if (messages.custom) { %>
        <div class="custom flash-message">
            <%= messages.custom %>
        </div>
    <% } %>
</div>











<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>



<script>
    // Wait for the DOM to be ready
    $(document).ready(function () {
        // Show and then hide flash messages with fade-in and fade-out animations
        $('#flash-messages').fadeIn().delay(3000).fadeOut();
    });
</script>