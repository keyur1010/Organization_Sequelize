  <style>
    /* Add custom styles for the flash message */
    #flash-message {
      position: fixed;
      top: 20px;
      right: 20px;
      display: none;
      z-index: 1;
      border-radius: 20px;
    }
  </style>
</head>

<body>
    <% if(messages.success){ %>
    <p class="alert alert-success text-center" id="flash-message" role="alert">
        <%= messages.success %>
    </p>
    <% }else if(messages.error){ %>
      <p class="alert alert-danger  text-center" id="flash-message" role="alert">
        <%= messages.error %>
    </p>
    
    
    <%}else if(messages.info) {%>
      <p class="alert alert-primary  text-center" id="flash-message" role="alert">
        <%= messages.info %>
    </p>
    <%}%>




<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    // Wait for the DOM to be ready
    $(document).ready(function () {
      // Show and then hide flash messages with fade-in and fade-out animations
      $('#flash-message').fadeIn().delay(3000).fadeOut();
    });
  </script>
